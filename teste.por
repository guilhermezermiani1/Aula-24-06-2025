programa{
	funcao inicio(){
		real numero1, numero2, soma, mult, div
		escreva("Informe o 1° número: ")
		leia(numero1)
		escreva("Informe o 2° número: ")
		leia(numero2)
		
		soma = numero1 + numero2
		
